<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivImagemProduto"
        android:layout_width="140dp"
        android:layout_height="101dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tvTituloProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginStart="8dp"
        android:text="Produto"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/ivImagemProduto"
        app:layout_constraintTop_toTopOf="@+id/ivImagemProduto" />

    <TextView
        android:id="@+id/tvTipoProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tipo1"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tvTituloProduto"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloProduto" />

    <TextView
        android:id="@+id/tvValorProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="R$ 20,00"
        android:textColor="#009688"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tvTraco"
        app:layout_constraintTop_toTopOf="@+id/tvTipoProduto" />

    <TextView
        android:id="@+id/tvTraco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="-"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tvTipoProduto"
        app:layout_constraintTop_toTopOf="@+id/tvTipoProduto" />

    <TextView
        android:id="@+id/tvOrdemProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Ordem - ordem1"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tvTipoProduto"
        app:layout_constraintTop_toBottomOf="@+id/tvTipoProduto" />
</androidx.constraintlayout.widget.ConstraintLayout>
